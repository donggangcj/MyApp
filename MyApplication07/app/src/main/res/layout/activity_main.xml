<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background02"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/Add"
        android:id="@+id/btnAdd"
        android:background="@drawable/shape"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />
    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAdd"
        android:layout_alignParentTop="true"
        />
    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/ListAll"
        android:background="@drawable/shape"
        android:layout_marginLeft="5dp"
        android:id="@+id/btnGetAll"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnAdd"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="@string/Onduty"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shape"
        android:id="@+id/btnOnduty"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnGetAll"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Grademanage"
        android:layout_marginLeft="5dp"
        android:background="@drawable/shape"
        android:id="@+id/btnGrade"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnOnduty"/>
</RelativeLayout>
